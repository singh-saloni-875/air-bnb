<% layout('/layouts/boilerplate') -%>
<%= success %>
    <body>
        <h3>All Listings</h3>
        <!-- <form method="GET" action="/listing/new">
        <button>Add new Listing</button>
    </form> -->
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3 ">
            <% for(let listing of allListing){ %>
                <a href="/listing/<%= listing._id %>" class="listing-link">
                    <div class="listing-card card col">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing-image"
                            style="height: 20rem;">
                                <div class="card-img-overlay"></div>   
                        <div class="card-body">
                            <p class="card-text">
                                  <b>  <%= listing.title %><br></b>
                                &#8377;<%= listing.price.toLocaleString("en-IN")%> /night
                            </p>
                        </div>
                    </div>
                </a>
                <%} %>
        </div>



    </body>